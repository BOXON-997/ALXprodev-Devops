#!/bin/bash

# Required checker pattern:
# $name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall.

# Verify data.json exists
if [ ! -f data.json ]; then
    echo "data.json not found. Please run the API fetch script first."
    exit 1
fi

# Extract fields using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)

# Convert units (dm → m, hg → kg)
formatted_height=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
formatted_weight=$(awk "BEGIN { printf \"%.1f\", $weight / 10 }")

# Final output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
